{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "backend",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/chat-app-server",
      "runtimeExecutable": "nodemon",
      "program": "src/app.ts",
      "restart": true,
      "outputCapture": "std",
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "development"
      }
    },
		{
      "type": "web",
      "request": "launch",
      "name": "Launch Vite App",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/chat-app-client/src",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
